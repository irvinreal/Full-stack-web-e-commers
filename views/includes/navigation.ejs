<header>
  <nav>
    <ul>
      <li><a href="/" class="<%= path === '/' ? 'active' : '' %>">Shop</a></li>
      <li>
        <a href="/products" class="<%= path === '/products' ? 'active' : '' %>">Products</a>
      </li>
      <% if (isAuthenticated) { %>
      <li>
        <a href="/cart" class="<%= path === '/cart' ? 'active' : '' %>">Cart</a>
      </li>
      <li>
        <a href="/orders" class="<%= path === '/orders' ? 'active' : '' %>">Orders</a>
      </li>
      <li>
        <a href="/admin/add-product" class="<%= path === '/admin/add-product' ? 'active' : '' %>">
          Add Product
        </a>
      </li>
      <li>
        <a href="/admin/products" class="<%= path === '/admin/products' ? 'active' : '' %>">
          Admin Products
        </a>
      </li>
      <% } %>
    </ul>
    <ul style="display: flex; flex-grow: 1; justify-content: end; align-items: center">
      <% if (!isAuthenticated) { %>
      <li>
        <a
          href="/login"
          style="
            background: rgb(197, 197, 197);
            color: black;
            padding: 4px 10px;
            border-radius: 6px;
            margin: 0;
          "
          class="<%= path === '/login' ? 'active' : '' %>"
        >
          Login
        </a>
      </li>
      <li>
        <a
          href="/signup"
          style="
            background: rgb(197, 197, 197);
            color: black;
            padding: 4px 10px;
            border-radius: 6px;
            margin: 0;
          "
          class="<%= path === '/signup' ? 'active' : '' %>"
        >
          Signup
        </a>
      </li>
      <% } else { %>
      <li>
        <form action="/logout" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button
            style="
              padding: 4px 10px;
              border-radius: 6px;
              border: 1px solid white;
              margin: 0;
              font-size: 16px;
              place-content: center;
              box-sizing: border-box;
            "
            class="<%= path === '/login' ? 'active' : '' %>"
          >
            Logout
          </button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>
