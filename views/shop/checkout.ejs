
<%- include('../includes/head.ejs')%>
  <link rel="stylesheet" href="/css/cart.css">
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
      <ul class="pl-3">
        <% products.forEach((p) => { %>
            <li>
              <h1 class="text-medium"><%= p.productId.title %></h1>
              <h2 class="text-medium">Quantity: <%= p.quantity %></h2>
            </li>
        <% }) %>
      </ul>
      <div class="centered pt-2">
        <h2 class="text-medium">Total: $<%= totalSum %></h2>
      </div>
      <div class="centered">
        <button id="order-btn" class="btn">ORDER</button>
        <script src="https://js.stripe.com/v3/"></script>
        <script>
          let stripe = Stripe('pk_test_51QNQ4B2NLPVrJOJb9I8RaAvHiQrHisbxZelRuqxhM2TO0VzTWS4TKo1p3kOgJjlbrE59m9nyqhGwf9BgQtlUuGsE00TSJNUUUB');
          const orderBtn = document.getElementById('order-btn');
          orderBtn.addEventListener('click', function() {
            stripe.redirectToCheckout({
              sessionId: '<%= sessionId %>'
            });
          });
        </script>
      </div>

    </main>

<%- include('../includes/end.ejs') %>
