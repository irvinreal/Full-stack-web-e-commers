<%- include('../includes/head.ejs')%>
  </head>
  <body>
    <%- include('../includes/navigation.ejs')%>
    <main>

      <% if (errorMessage[0]) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
      <% } %>

      <% if (infoRequiredDataMessage[0]) { %>
        <div class="user-message"><%= infoRequiredDataMessage %></div>
      <% } %>

      <form class="login-form" action="/reset" method="POST" style="margin: auto; width: fit-content">
        <div class="form-control">
          <label for="email">E-mail</label>
          <input type="email" name="email" id="email" />
        </div>
        
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"  />

        <div class=box-btn>
          <button class="btn w-full py-2" type="submit">Reset Password</button>
        </div>
      </form>
    </main>
<%- include('../includes/end.ejs') %>
