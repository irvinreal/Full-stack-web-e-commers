<%- include('../includes/head.ejs')%>
  </head>
  <body>
    <%- include('../includes/navigation.ejs')%>
    <main>

      <% if (errorMessage[0]) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
      <% } %>

      <% if (infoRequiredDataMessage[0]) { %>
        <div class="user-message"><%= infoRequiredDataMessage %></div>
      <% } %>

      <form class="login-form" action="/new-password" method="POST" style="margin: auto; width: fit-content">
        <div class="form-control">
          <label for="password">Password</label>
          <input type="password" name="password" id="password"/>
        </div>
        
        <input type="hidden" name="userId" value="<%= userId %>"  />
        <input type="hidden" name="passwordToken" value="<%= passwordToken %>"  />
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"  />

        <div class='box-btn w-full'>
          <button class="btn login-btn w-full py-2" type="submit">Update Password</button>
        </div>
      </form>
    </main>
<%- include('../includes/end.ejs') %>
