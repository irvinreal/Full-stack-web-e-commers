<%- include('../includes/head.ejs')%>
  </head>
  <body>
    <%- include('../includes/navigation.ejs')%>
    <main>

      <% if (errorMessage[0]) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
      <% } %>

      <form class="login-form" action="/login" method="POST"  novalidate>
        <div class="form-control">
          <label class="<%= validationErrors.find(e => e.path == 'email') ? 'invalid-label' : '' %>" for="email">E-mail</label>
          <input
            class="<%= validationErrors.find(e => e.path == 'email') ? 'invalid' : '' %>"
            type="email"
            name="email"
            id="email"
            value="<%= oldInput.email %>"
          />
        </div>
        <div class="form-control">
          <label class="<%= validationErrors.find(e => e.path == 'password') ? 'invalid-label' : '' %>" for="password">Password</label>
          <input
            class="<%= validationErrors.find(e => e.path == 'password') ? 'invalid' : '' %>"
            type="password"
            name="password"
            id="password"
            value="<%= oldInput.password %>"
          />
        </div>
        
          <input type="hidden" name="_csrf" value="<%= csrfToken %>"  />

          <button class="btn login-btn w-full py-2" type="submit">Login</button>
      </form>
      <div class="centered pt-6 reset-btn-container">
        <a href="/reset" class="btn reset-btn w-full p-2">Reset Password</a>
      </div>
    </main>
<%- include('../includes/end.ejs') %>
